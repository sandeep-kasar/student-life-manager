<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/bottom_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_exp_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="fill_vertical"
            android:paddingLeft="13dp"
            android:text="sun, 5 mar 2017"
            android:textColor="@color/medium_gray"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="fill_vertical|right"
            android:paddingRight="12dp"
            android:text="Rs.2000"
            android:textColor="@color/medium_gray"
            android:textSize="15sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/rectangle_one"
            android:gravity="fill_vertical"
            android:paddingLeft="2dp"
            android:text="Shopping for collage days."
            android:textColor="@color/white"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:paddingLeft="13sp"
            android:text="Shopping for collage days.Shopping for collage days.Shopping for collage days.Shopping for collage days."
            android:textColor="@color/dark_gray" />
    </LinearLayout>

</LinearLayout>